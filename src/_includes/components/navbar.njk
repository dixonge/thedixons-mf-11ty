<div class="{{ classes.navbar }} items-center ml-auto mr-auto">

    <nav class="items-center min-w-full ml-auto -mb-px lg:flex">
    <a href="https://thedixons.net">
      <span class="sr-only">Go back to homepage</span>
    </a>
	<a href="https://thedixons.net"><img src="/assets/img/logo.png" alt="TheDixons logo - an old-fashioned Quaker hat" align="left" class="w-1/4 mr-2 align-middle lg:w-full"></a>
	<p class="text-sm align-text-top lg:text-lg">The Dixons<br />A Colonial Quaker Family</p>
      {% for item in navigation.main %}
      <a {% if item.external %}rel="external" {% endif %} href="{{ item.url | safe }}"
        class="px-1 py-6 leading-5 whitespace-no-wrap border-b-2 border-transparent focus:outline-none hover:border-cool-gray-700 focus:border-cool-gray-700 text-sm lg:text-lg ml-2 md:ml-12 {% if page.url == item.url %}border-primary{% endif %}"
        {% if page.url == item.url %} aria-current="page" {% endif %}>{{ item.label }}</a>
      {% endfor %}
      {% if site.allowDarkMode %}
      <button id="dark-mode-toggle" class="p-2 ml-6 md:ml-12" aria-hidden="false">
        <svg aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6 moon-icon">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
        </svg>
        <svg aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6 sun-icon">
          <path fill-rule="evenodd"
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
      {% endif %}
    </nav>
  </div>
</div>